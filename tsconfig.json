{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "api/*": ["api/*"],
      "assets/*": ["assets/index"],
      "components/*": ["components/index"],
      "pages/*": ["pages/index"],
      "style/*": ["style/*"],
      "utils/*": ["utils/index"],
      "types/*": ["types/index"],
  },
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "./src/**/*",
    "./types/styled.d.ts",
    "./types/fonts.d.ts",
    "./types/react-app-env.d.ts"
  ],
  "exclude": [".git", "node_modules"],
}
